@model IEnumerable<Domain.CarTypes.Car>

@{
    ViewBag.Title = "Index";
}
<p></p>
<i class="fa fa-automobile fa-2x"></i>
<p></p>
<a href="@Url.Action("Create")">
    <i class="fa fa-plus"> New</i>
</a>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Version)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Engine.HorsePowers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpecialAdds)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Engine.HorsePowers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialAdds)
            </td>

            <td>

                <a href="@Url.Action("Edit", new {id = item.Id})"><i class="fa fa-edit"></i>Edit </a> |
                <a href="@Url.Action("Details", new {id = item.Id})"><i class="fa fa-list"></i> Details </a> |
                <a href="@Url.Action("Delete", new {id = item.Id})"><i class="fa fa-trash"></i> Delete </a>

            </td>
        </tr>
    }

</table>